{
  "name": "@modstrap/spinner",
  "version": "1.0.0",
  "description": "Spinner widget with support for custom value patterns.",
  "main": "dist/Spinner.js",
  "types": "dist/Spinner.d.ts",
  "style": "dist/Spinner.css",
  "author": "Callisto (https://github.com/callisto2410)",
  "license": "MIT",
  "homepage": "https://github.com/callisto2410/modstrap-spinner",
  "bugs": {
    "url": "https://github.com/callisto2410/modstrap-spinner/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callisto2410/modstrap-spinner.git"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:production && npm run build:demo",
    "build:production": "tsc --project tsconfig.json && npx sass --no-source-map src/Spinner.scss dist/Spinner.css",
    "build:demo": "webpack --config webpack.config.js",
    "build:demo:watch": "webpack --watch --config webpack.config.js",
    "build:clean": "npx rimraf .cache dist demo/dist *.tgz",
    "build:pack": "npm run build:clean && npm run build:production && npm pack"
  },
  "devDependencies": {
    "@types/node": "^14.10.1",
    "autoprefixer": "^10.0.4",
    "css-loader": "^5.0.1",
    "postcss-loader": "^4.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.30.0",
    "sass-loader": "^10.0.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {}
}
